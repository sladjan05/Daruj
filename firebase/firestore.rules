rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write:  if request.auth != null && request.auth.uid == userId; 
    }

    match /posts/{postId} {
      allow read:   if request.auth != null;

      allow create: if  request.auth != null;
      allow delete: if  request.auth != null && request.auth.uid == resource.data.userId;
      allow update: if  request.auth != null && 
                       (!("userId" in resource.data) ||
                        request.auth.uid == resource.data.userId) &&
                       (!("donorCount" in resource.data) ||
                        request.resource.data.donorCount == resource.data.donorCount) &&
                       (!("commentCount" in resource.data) || 
                        request.resource.data.commentCount == resource.data.commentCount) &&
                       (!("shareCount" in resource.data) ||
                        request.resource.data.shareCount == resource.data.shareCount);
    }
  }
}
